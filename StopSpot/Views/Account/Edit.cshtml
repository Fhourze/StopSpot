@model StopSpot.Models.AccountModel

@{
    ViewBag.Title = "Edit Account";
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>

    <div class="overlay"></div>
    <div id="edit-page" class="center-content">
        <div class="register-container">
            <h2>Edit Account</h2>

            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="AccountId" />

                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, new { @class = "visually-hidden" })
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, new { @class = "visually-hidden" })
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, new { @class = "visually-hidden" })
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "visually-hidden" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>



                <button type="submit" value="save" class="btn btn-primary btn-block">Update</button>
                @Html.ActionLink("Delete Account", "DeleteLastAccount", "Account", null, new { @class = "btn btn-danger" })
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
