@{
}
@model ListingModel;

<h1>Edit Parking Spot</h1>

<form action="EditListingSpot" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OwnerName">Owner Name</label>
        <input asp-for="OwnerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Picture">Picture</label>
        <input asp-for="Picture" name="files" type="file" action="Index" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicles">Vehicles</label> <br />
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Motorbikes",
                Value = "Motorbikes"
            });
            listItems.Add(new SelectListItem
            {
                Text = "4 Wheelers",
                Value = "4 Wheelers",

            });
            listItems.Add(new SelectListItem
            {
                Text = "Trucks",
                Value = "Trucks"
            });
        }

        @Html.DropDownListFor(model => model.Vehicles, listItems, "-- Select Vehicle Type --")
    </div>
    <div class="form-group">
        <label asp-for="PricePerHour">Price Per Hour</label>
        <input asp-for="PricePerHour" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OwnerNumber">Owner Number</label>
        <input asp-for="OwnerNumber" class="form-control" />
    </div>
    <fieldset>
        <label asp-for="Availability">Availability</label>
        <br />
        @Html.RadioButtonFor(e => e.Availability, true, new { id = "available-true" })
        @Html.Label("available-true", "Available")

        @Html.RadioButtonFor(e => e.Availability, false, new { id = "available-false" })
        @Html.Label("available-false", "Occupied")
    </fieldset>
    <br />
    <button asp-action="EditListingSpot">Save Changes</button>
    <button type="button" onclick="history.back()" class="btn">Cancel</button>
</form>