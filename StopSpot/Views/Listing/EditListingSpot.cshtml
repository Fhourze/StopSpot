@model ListingModel;

@{
    ViewBag.Title = "Edit Listing Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/listing.css">
</head>
<body>
    <div class="overlay"></div>
    <div id="listing-page" class="center-content">
        <div class="listing-container">
            <h1>Edit Parking Spot</h1>

<form action="EditListingSpot" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OwnerName">Owner Name</label>
        <input asp-for="OwnerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Picture">Picture</label>
        <input asp-for="Picture" name="files" type="file" action="Index" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicles">Vehicles</label>
        <input asp-for="Vehicles" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PricePerHour">Price Per Hour</label>
        <input asp-for="PricePerHour" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OwnerNumber">Owner Number</label>
        <input asp-for="OwnerNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Availability">Availability</label>
        <input asp-for="Availability" class="form-control" />
    </div>
    <button asp-action="EditListingSpot">Save Changes</button>
    <button type="button" onclick="history.back()" class="btn">Cancel</button>
</form>